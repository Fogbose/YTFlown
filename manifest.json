{
  "manifest_version": 3,
  "name": "YTFlown",
  "version": "1.1.0",
  "description": "Chrome plugin for YouTube that makes mechanisms immediately available to the user to correct recommendations when they are wrong and give them a greater impact.",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webRequest",
    "webNavigation",
    "identity"
  ],
  "host_permissions": ["*://*.youtube.com/*"],

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/images/icon-16.png",
      "32": "assets/images/icon-32.png",
      "48": "assets/images/icon-64.png",
      "128": "assets/images/icon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/content.js"],
      "css": ["scss/style.css"]
    }
  ],

  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-64.png",
    "128": "assets/images/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],

  "oauth2": {
    "client_id": "68548725295-8euag6qa2873dmei96ojo97t8ioj6i4u.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/youtube.force-ssl"]
  }
}
